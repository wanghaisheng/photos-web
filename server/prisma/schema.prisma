generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NewsletterTemplate {
  id        String   @id @default(cuid())
  subject   String
  content   String
  delivered Boolean  @default(false)
  sendAt    DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ImageType {
  DEFAULT
  ABOUT
}

model Image {
  id              String            @id @default(cuid())
  src             String            @unique
  alt             String?
  height          Int
  width           Int
  placeholder     String
  type            ImageType?        @default(DEFAULT)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  PortfolioPhotos PortfolioPhotos[]
  Photos          Photos[]
}

model Photos {
  imageId String @unique
  image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)
}

model PortfolioPhotos {
  id        String   @id @default(cuid())
  name      String   @unique
  images    Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
